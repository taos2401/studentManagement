extends ./layout/common2

block css
    link(rel="stylesheet", href="../static/css/infoUser.css")

block content
    .user-item(data-id=user.id).work
        img(src=user.image)
        .info
            h3.name= "Name: " + user.name
            .role.misize= "Role: "+user.role
            .phone.misize= "Phone: " +user.phone
            .email.misize= "Email: "+user.email
            if role && user.role=="student"
                .button-edit
                    a(href="/users/updateprofile/"+user.id) Edit student info
    
    #classes
        #all-class.all-class

    .form-cmt
        form#form-cmt(method="POST")
            input(type="text" name="comment" id="input-cmt") 
            input(type="submit" value="Comment")
    .cmts
    #view-more.btn
    
    script(src="../static/js/user.js")